<Window x:Class="AKRemindClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="分线客户端" Height="500" Width="800" Icon="AKRemind.ico" Loaded="MainWindow_OnLoaded" Closing="MainWindow_OnClosing">
    <Grid Background="Black">
        <TextBlock Name="TextBlockIP"  Text="本地默认IP为：" Foreground="Chartreuse" FontSize="20" ></TextBlock>
        <TextBlock Name="TextBlock1"  Text="正在连接服务器，请稍等..." Foreground="Chartreuse" FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="20" FontWeight="Bold" Foreground="Red" Text="请勿关闭此程序" VerticalAlignment="Top"/>
        <TextBlock Text="提示：请先启动服务器，注意检查本地网关与服务器网关是否相同！" Foreground="Red" FontSize="15" VerticalAlignment="Bottom"  HorizontalAlignment="Left"></TextBlock>
    </Grid>
</Window>
